<UserControl x:Class="MacroscopImageDownloader.Views.ThreeImageLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MacroscopImageDownloader.Views"
             xmlns:vm="clr-namespace:MacroscopImageDownloader.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ItemsControl ItemsSource="{Binding ImageLoaders, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ThreeImageLoader}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{x:Static local:ThreeImageLoader.Rows}"
                                 Columns="{x:Static local:ThreeImageLoader.Columns}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="vm:ImageDownloader">
                    <local:ImageLoaderView DataContext="{Binding}">
                    </local:ImageLoaderView>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Grid.Row="1" Content="Download All" Command="{Binding DownloadAllCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ThreeImageLoader}}"/>
        <ProgressBar Grid.Row="2" Value="{Binding Progress, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ThreeImageLoader}, Mode=OneWay}"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="FillAllTextBox" Grid.Column="0"/>
            <Button Click="FillAllClick" Grid.Column="1" Content="Fill All}"/>
        </Grid>
    </Grid>
</UserControl>
