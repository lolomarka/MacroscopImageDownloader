<UserControl x:Class="MacroscopImageDownloader.Views.ThreeImageLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MacroscopImageDownloader.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Name="LoadersGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:ImageLoaderView Grid.Column="0"/>
            <local:ImageLoaderView Grid.Column="1"/>
            <local:ImageLoaderView Grid.Column="2"/>
        </Grid>
        <Button Grid.Row="1" Content="Download All" Command="{Binding DownloadAllCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ThreeImageLoader}}"/>
        <ProgressBar Grid.Row="2" Value="{Binding Progress, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ThreeImageLoader}, Mode=OneWay}"/>
    </Grid>
</UserControl>
